<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item    android:state_selected="true" >
        <shape>
            <corners android:radius="32px"/>
            <solid android:color="@color/red_big"/>
            <padding android:bottom="10px"
                android:left="10px"
                android:right="10px"
                android:top="10px"/>
        </shape>


    </item>
    <item android:state_selected="false"  >
        <shape>
            <corners android:radius="32px"/>
            <solid android:color="@color/white"/>
            <stroke android:width="1px" android:color="@color/top_grey"/>
            <padding android:bottom="10px"
                android:left="10px"
                android:right="10px"
                android:top="10px"/>
        </shape>


    </item>
</selector>